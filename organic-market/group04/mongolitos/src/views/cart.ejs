    <link rel="stylesheet" href="../../css/footer.css">
</head>

<body>
    <%- include('header')%>

    <ul class="container-products">
        <% for(let i = 0; i< results.length; i++) { %>
        <li class="products-card">
            <a href="/products/<%=results[i]._id%>">
                <img class="image__product box-image" src="<%= results[i].img %>">
                <p class="text__type"><%=results[i].type%></p>
                <p class="text__title"><%= results[i].title%></p>
            </a>
            <div>
                <p class="text__price"><%= results[i].price%> â‚¬ </p>
            </div>
        </li>
        <% } %>
    </ul>

    <%- include('footer')%>
</body>

</html>